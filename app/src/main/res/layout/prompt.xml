<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/viewroot"
    android:layout_width="fill_parent"
    android:padding="10dp"
    android:background="@drawable/side_nav_bar"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="100">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Minimum Value"
            android:gravity="center_horizontal"

            android:textColor="@color/white"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

        <EditText
            android:id="@+id/editHuemin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColorHint="#ffffff"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:background="@android:color/transparent"
            android:hint="Enter Min Hue value"
             />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db"
            />
        <EditText
            android:id="@+id/editsatmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@android:color/transparent"
            android:textColorHint="#ffffff"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:hint="Enter Min Satu value"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db"
            />
        <EditText
            android:id="@+id/editvalmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColorHint="#ffffff"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:background="@android:color/transparent"
            android:hint="Enter Min Val value"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:text="Enter Minimum Value"
            android:gravity="center_horizontal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

        <EditText
            android:id="@+id/editHuemax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColorHint="#ffffff"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:hint="Enter Max Hue value"
            android:background="@android:color/transparent"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db"
            />
        <EditText
            android:id="@+id/editsatmax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColorHint="#ffffff"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:hint="Enter Max Satu value"
            android:background="@android:color/transparent"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db"
            />
        <EditText
            android:id="@+id/editvalmax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Max Val value"
            android:textColorHint="#ffffff"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db"
            />
    </LinearLayout>
</LinearLayout>